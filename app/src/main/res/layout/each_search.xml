<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eachSearchCardView"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/eachRouteParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:id="@+id/eachSearchTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Bus Number"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/eachSearchStarButton"
            />

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/eachSearchStarButton"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_star_outline_24"
            android:layout_height="30dp"
            android:layout_width="30dp"/>

        <LinearLayout
            android:layout_below="@+id/eachSearchTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/eachSearchLinearLayout"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>